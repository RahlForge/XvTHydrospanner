<Page x:Class="XvTHydrospanner.Views.ActiveModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="HeaderText" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="SubheaderText" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
        </StackPanel>
        
        <ListBox x:Name="ModsListBox" Grid.Row="1" Background="Transparent" 
                 BorderBrush="#3F3F46" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#252526" Margin="5" Padding="15" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="âœ“" FontSize="20" Foreground="#4EC9B0" 
                                       VerticalAlignment="Center" Visibility="{Binding IsApplied, 
                                       Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding RelativeGamePath}" FontWeight="SemiBold" 
                                           Foreground="White" FontSize="14"/>
                                <TextBlock Text="{Binding Description}" FontSize="11" 
                                           Foreground="#999999" Margin="0,5,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Border Background="#3F3F46" Padding="5,2" CornerRadius="3" Margin="0,0,5,0">
                                        <TextBlock Text="{Binding Category}" FontSize="9" Foreground="#CCCCCC"/>
                                    </Border>
                                    <TextBlock Text="{Binding IsApplied, StringFormat='Status: {0}'}" 
                                               FontSize="9" Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="2" Text="{Binding WarehouseFileId, StringFormat='ID: {0}'}" 
                                       FontSize="9" Foreground="#666666" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
