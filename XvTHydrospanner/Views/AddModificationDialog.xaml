<Window x:Class="XvTHydrospanner.Views.AddModificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Modification" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#252526">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select a file from the warehouse" FontSize="16" 
                   FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
        
        <TextBox x:Name="SearchBox" Grid.Row="1" Height="30" Margin="0,0,0,10" 
                 TextChanged="SearchBox_TextChanged"/>
        
        <DataGrid x:Name="WarehouseFilesGrid" Grid.Row="2" AutoGenerateColumns="False" 
                  Background="Transparent" Foreground="#CCCCCC" BorderBrush="#3F3F46" 
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowBackground="#1E1E1E" AlternatingRowBackground="#252526"
                  CanUserAddRows="False" IsReadOnly="True" Margin="0,0,0,15"
                  SelectionMode="Single" SelectionChanged="WarehouseFilesGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Target Path" Binding="{Binding TargetRelativePath}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <TextBlock Grid.Row="3" Text="Target Path (override)" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="TargetPathTextBox" Grid.Row="4" Height="30" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Width="80" Height="30" IsDefault="True" 
                    Style="{StaticResource PrimaryButtonStyle}" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
