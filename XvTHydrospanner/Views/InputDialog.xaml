<Window x:Class="XvTHydrospanner.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#252526"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="PromptTextBlock" Text="Enter value:" 
                   Foreground="White" FontSize="14" Margin="0,0,0,15" TextWrapping="Wrap"/>
        
        <TextBox Grid.Row="1" x:Name="InputTextBox" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Height="30" IsDefault="True"
                    Style="{StaticResource PrimaryButtonStyle}" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

