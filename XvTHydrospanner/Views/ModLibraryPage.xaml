<Page x:Class="XvTHydrospanner.Views.ModLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Mod Library" FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Content="+ Add Mod" Width="120" Height="35" 
                       Click="AddModButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0E639C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1177BB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Empty State -->
                <StackPanel Grid.Row="0" x:Name="EmptyStatePanel" Visibility="Collapsed" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
                    <TextBlock Text="No Mod Packages Found" FontSize="18" Foreground="#888888" 
                              HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Add mod archives from the Mod Warehouse page" FontSize="14" 
                              Foreground="#666666" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Mod Grid -->
                <ItemsControl Grid.Row="1" x:Name="ModsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                                   Margin="10" Width="250" Height="200" CornerRadius="5">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Active Indicator Badge -->
                                    <Border Grid.Row="0" Background="#4EC9B0" Width="35" Height="35" 
                                           CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Margin="0,-5,-5,0" 
                                           Visibility="{Binding IsActiveInProfile, Converter={StaticResource BoolToVisibilityConverter}}"
                                           ToolTip="Active in current profile">
                                        <TextBlock Text="âœ“" FontSize="20" FontWeight="Bold" Foreground="White" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Mod Info -->
                                    <StackPanel Grid.Row="0" Margin="15" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                                  Foreground="White" TextTrimming="CharacterEllipsis" 
                                                  ToolTip="{Binding Name}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#CCCCCC" 
                                                  TextWrapping="Wrap" MaxHeight="60" TextTrimming="CharacterEllipsis"
                                                  Margin="0,5,0,0" ToolTip="{Binding Description}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBlock Text="Files: " FontSize="11" Foreground="#888888"/>
                                            <TextBlock Text="{Binding FileIds.Count}" FontSize="11" Foreground="#888888"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Author}" FontSize="11" Foreground="#888888" 
                                                  Margin="0,2,0,0" Visibility="{Binding Author, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                                               Margin="10">
                                        <Button Content="Manage" Width="80" Height="28" Margin="5,0"
                                               Click="ManageButton_Click" Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#0E639C"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1177BB"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
