<Window x:Class="XvTHydrospanner.Views.ModManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Mod Package" Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Mod Info -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="ModNameTextBlock" FontSize="20" FontWeight="Bold" 
                      Foreground="White" TextWrapping="Wrap"/>
            <TextBlock x:Name="ModDescriptionTextBlock" FontSize="13" Foreground="#CCCCCC" 
                      TextWrapping="Wrap" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Author: " FontSize="12" Foreground="#888888"/>
                <TextBlock x:Name="AuthorTextBlock" FontSize="12" Foreground="#888888"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Version: " FontSize="12" Foreground="#888888"/>
                <TextBlock x:Name="VersionTextBlock" FontSize="12" Foreground="#888888"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Actions -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <Button x:Name="AddToProfileButton" Content="Add to Active Profile" Height="35" 
                   Margin="0,0,0,10" Click="AddToProfileButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0E639C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="RemoveFromProfileButton" Content="Remove from Active Profile" Height="35" 
                   Margin="0,0,0,10" Click="RemoveFromProfileButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#D97706"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F59E0B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Files List -->
        <GroupBox Grid.Row="2" Header="Files in this Mod" Foreground="White" 
                 BorderBrush="#3F3F46" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="FilesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" 
                                   Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontSize="13" Foreground="White" 
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding TargetRelativePath}" FontSize="11" 
                                                  Foreground="#888888" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Border Background="#3F3F46" CornerRadius="3" Padding="6,3">
                                            <TextBlock Text="{Binding Category}" FontSize="10" 
                                                      Foreground="#CCCCCC"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Delete Mod Package" Width="150" Height="30" Padding="10,5" 
                   Margin="0,0,10,0" Click="DeleteButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DC2626"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EF4444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Close" Width="100" Height="30" Padding="10,5" IsCancel="True"
                   Background="#3F3F46" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
