<Window x:Class="XvTHydrospanner.Views.AddModPackageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Mod Package from Archive" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Archive File -->
        <TextBlock Grid.Row="0" Text="Archive File:" Foreground="White" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="ArchiveFileTextBox" IsReadOnly="True" 
                 Background="#2D2D30" Foreground="White" BorderBrush="#3F3F46" 
                 Padding="5" Margin="0,0,0,15"/>
        
        <!-- Mod Name -->
        <TextBlock Grid.Row="2" Text="Mod Name:" Foreground="White" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="ModNameTextBox" 
                 Background="#2D2D30" Foreground="White" BorderBrush="#3F3F46" 
                 Padding="5" Margin="0,0,0,15"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="4" Text="Description:" Foreground="White" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" x:Name="DescriptionTextBox" TextWrapping="Wrap" AcceptsReturn="True"
                 Background="#2D2D30" Foreground="White" BorderBrush="#3F3F46" 
                 Padding="5" Margin="0,0,0,15" VerticalScrollBarVisibility="Auto"/>
        
        <!-- Options -->
        <CheckBox Grid.Row="6" x:Name="CopyToGameRootCheckBox" 
                  Content="Also copy structure to game root (for XvT compatibility)"
                  Foreground="White" Margin="0,0,0,15"
                  ToolTip="When checked, files will be copied to both BalanceOfPower/ and the game root directory"/>
        
        <!-- Files Preview -->
        <GroupBox Grid.Row="7" Header="Files in Archive" Foreground="White" 
                  BorderBrush="#3F3F46" Margin="0,0,0,15">
            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="FilesPreviewTextBlock" Foreground="#CCCCCC" 
                          Padding="5" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add Package" Width="100" Padding="10,5" Margin="0,0,10,0"
                    Click="AddButton_Click" IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0E639C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Width="100" Padding="10,5" IsCancel="True"
                    Background="#3F3F46" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
