<Window x:Class="XvTHydrospanner.Views.AddWarehouseFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add File to Warehouse" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#252526">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Source File" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="SourceFileTextBox" Grid.Row="1" Height="30" IsReadOnly="True" 
                 Background="#3F3F46" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="2" Text="Display Name" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="3" Height="30" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="4" Text="Target Path (relative to game root)" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="TargetPathTextBox" Grid.Row="5" Height="30" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="6" Text="Category" Foreground="White" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="7" Height="30" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="8" Text="Description" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="9" TextWrapping="Wrap" 
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Width="80" Height="30" IsDefault="True" 
                    Style="{StaticResource PrimaryButtonStyle}" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
