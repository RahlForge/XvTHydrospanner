<Page x:Class="XvTHydrospanner.Views.ProfileManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProfileManagementPage"
      Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Profile Management" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Create and manage mod profiles for your game" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profiles List -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                    CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Profiles" FontSize="16" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="ProfilesListBox" Grid.Row="1" Background="Transparent" 
                             BorderThickness="0" SelectionChanged="ProfilesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="{Binding FileModifications.Count, StringFormat='{}{0} modifications'}" 
                                               FontSize="10" Foreground="#999999"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Button x:Name="CloneProfileButton" Content="Clone Profile" Height="30" 
                                Click="CloneProfileButton_Click" Margin="0,0,0,5"/>
                        <Button x:Name="DeleteProfileButton" Content="Delete Profile" Height="30" 
                                Style="{StaticResource DangerButtonStyle}" Click="DeleteProfileButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Profile Details -->
            <Border Grid.Column="1" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                    CornerRadius="5" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ProfileDetailsPanel" Visibility="Collapsed">
                        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#999999" 
                                   Margin="0,5,0,20" TextWrapping="Wrap"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Created" FontSize="10" Foreground="#666666"/>
                                <TextBlock Text="{Binding CreatedDate, StringFormat='g'}" Foreground="#CCCCCC"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Last Modified" FontSize="10" Foreground="#666666"/>
                                <TextBlock Text="{Binding LastModified, StringFormat='g'}" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="File Modifications" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="White" Margin="0,0,0,10"/>
                        
                        <Button x:Name="AddModButton" Content="+ Add Modification" Height="35" 
                                Style="{StaticResource PrimaryButtonStyle}" Click="AddModButton_Click" 
                                Margin="0,0,0,10" HorizontalAlignment="Left" Width="200"/>
                        
                        <ListBox x:Name="ModificationsListBox" Background="Transparent" 
                                 BorderBrush="#3F3F46" BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" Margin="5" Padding="10" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding RelativeGamePath}" FontWeight="SemiBold" 
                                                           Foreground="White"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" 
                                                           Foreground="#999999" Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding Category}" FontSize="9" 
                                                           Foreground="#666666" Margin="0,3,0,0"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1" Content="Ã—" Width="30" Height="30" 
                                                    FontSize="20" VerticalAlignment="Top"
                                                    Tag="{Binding}" Click="RemoveModButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
