<Page x:Class="XvTHydrospanner.Views.ProfileManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProfileManagementPage"
      Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Profile Management" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Create and manage mod profiles for your game" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profiles List -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                    CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Profiles" FontSize="16" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="ProfilesListBox" Grid.Row="1" Background="Transparent" 
                             BorderThickness="0" SelectionChanged="ProfilesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Active Profile Checkmark -->
                                    <TextBlock Grid.Column="0" Text="✓" FontSize="16" FontWeight="Bold" 
                                               Foreground="#4EC9B0" Margin="0,0,8,0" VerticalAlignment="Center"
                                               x:Name="ActiveCheckmark"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="{Binding FileModifications.Count, StringFormat='{}{0} modifications'}" 
                                                   FontSize="10" Foreground="#999999"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Button x:Name="NewProfileButton" Content="+ New Profile" Height="30" 
                                Style="{StaticResource PrimaryButtonStyle}" Click="NewProfileButton_Click" Margin="0,0,0,5"/>
                        <Button x:Name="CloneProfileButton" Content="Clone Profile" Height="30" 
                                Click="CloneProfileButton_Click" Margin="0,0,0,5"/>
                        <Button x:Name="DeleteProfileButton" Content="Delete Profile" Height="30" 
                                Style="{StaticResource DangerButtonStyle}" Click="DeleteProfileButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Profile Details -->
            <Border Grid.Column="1" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                    CornerRadius="5" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ProfileDetailsPanel" Visibility="Collapsed">
                        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#999999" 
                                   Margin="0,5,0,20" TextWrapping="Wrap"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Created" FontSize="10" Foreground="#666666"/>
                                <TextBlock Text="{Binding CreatedDate, StringFormat='g'}" Foreground="#CCCCCC"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Last Modified" FontSize="10" Foreground="#666666"/>
                                <TextBlock Text="{Binding LastModified, StringFormat='g'}" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Mod Packages" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="White" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Add or remove mods from the Mod Library page" FontSize="11" 
                                   Foreground="#888888" Margin="0,0,0,10" TextWrapping="Wrap"/>
                        
                        <ListBox x:Name="ModPackagesListBox" Background="Transparent" 
                                 BorderBrush="#3F3F46" BorderThickness="1" MinHeight="100">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" Margin="5" Padding="15" CornerRadius="3">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"
                                                       Foreground="White"/>
                                            <TextBlock Text="{Binding Description}" FontSize="11" 
                                                       Foreground="#CCCCCC" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <TextBlock Text="Files: " FontSize="10" Foreground="#888888"/>
                                                <TextBlock Text="{Binding FileIds.Count}" FontSize="10" Foreground="#888888"/>
                                                <TextBlock Text=" • " FontSize="10" Foreground="#666666" Margin="5,0"/>
                                                <TextBlock Text="{Binding Author}" FontSize="10" Foreground="#888888"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
