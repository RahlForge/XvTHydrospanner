<Page x:Class="XvTHydrospanner.Views.ModdedInstallsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Modded Installs" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Download complete modded game installations" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="⬆ Upload Install" Width="140" Height="35" 
                       Click="UploadInstallButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0E639C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1177BB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Loading/Error State -->
            <StackPanel Grid.Row="0" x:Name="StatusPanel" Visibility="Visible" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
                <TextBlock x:Name="StatusText" Text="Loading installs..." FontSize="16" Foreground="#888888" 
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Button x:Name="RefreshButton" Content="🔄 Refresh" Width="120" Height="35" 
                       Click="RefreshButton_Click" Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0E639C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1177BB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <!-- Installs Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20" x:Name="InstallsScrollViewer" Visibility="Collapsed">
                <ItemsControl x:Name="InstallsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252526" BorderBrush="#3F3F46" BorderThickness="1" 
                                   Margin="10" Width="250" Height="180" CornerRadius="5">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Content -->
                                    <StackPanel Grid.Row="0" Margin="15" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="Bold" 
                                                  Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#CCCCCC" 
                                                  TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="60"/>
                                    </StackPanel>
                                    
                                    <!-- Action Button -->
                                    <Button Grid.Row="1" Content="⬇ Download" Height="35" Margin="10" 
                                           Click="DownloadButton_Click" Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#0E639C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="FontSize" Value="13"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1177BB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

