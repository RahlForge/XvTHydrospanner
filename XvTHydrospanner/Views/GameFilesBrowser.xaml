<Page x:Class="XvTHydrospanner.Views.GameFilesBrowser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Game Files Browser" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="GamePathText" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
        </StackPanel>
        
        <TreeView x:Name="FilesTreeView" Grid.Row="1" Background="#252526" 
                  BorderBrush="#3F3F46" Foreground="#CCCCCC">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Page>
