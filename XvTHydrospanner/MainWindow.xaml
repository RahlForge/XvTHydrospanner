<Window x:Class="XvTHydrospanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="XvT Hydrospanner - Mod Manager" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="XvT HYDROSPANNER" FontSize="20" FontWeight="Bold" Foreground="#FFD700"/>
                    <TextBlock Text="Mod Manager for Star Wars: X-Wing vs TIE Fighter" FontSize="10" Foreground="#999999"/>
                </StackPanel>
                
                <!-- Active Profile Display -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="ActiveProfileText" Text="Active Profile: None" Foreground="White" 
                               VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0,0,15,0"/>
                    <Button x:Name="SettingsButton" Content="âš™" Width="40" Height="30" 
                            FontSize="16" Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Navigation -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <StackPanel>
                    <Button x:Name="ProfileManagementButton" Content="Profile Management" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="ProfileManagementButton_Click"/>
                    <Button x:Name="ModLibraryButton" Content="Mod Library" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="ModLibraryButton_Click"/>
                    <Button x:Name="WarehouseButton" Content="Mod Warehouse" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="WarehouseButton_Click"/>
                    <Button x:Name="RemoteModsButton" Content="ðŸŒ Remote Mods" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="RemoteModsButton_Click"/>
                    <Button x:Name="ModdedInstallsButton" Content="ðŸ“¦ Modded Installs" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="ModdedInstallsButton_Click"/>
                    <Button x:Name="GameFilesButton" Content="Game Files Browser" Height="45" 
                            Style="{StaticResource NavButtonStyle}" Click="GameFilesButton_Click"/>
                    <Button x:Name="ApplyProfileButton" Content="â–¶ Apply Profile" Height="50" 
                            Margin="10,20,10,10" Background="#0E639C" Foreground="White" FontWeight="Bold"
                            Click="ApplyProfileButton_Click"/>
                    <Button x:Name="RevertProfileButton" Content="â—€ Revert Profile" Height="50" 
                            Margin="10,10,10,10" Background="#A54040" Foreground="White" FontWeight="Bold"
                            Click="RevertProfileButton_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <Border Grid.Column="1" Background="#1E1E1E">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" Foreground="#CCCCCC" 
                           VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock x:Name="GamePathText" Grid.Column="1" Foreground="#999999" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
